@model KPMGLoginForm.Models.TblUser

@{
    ViewData["Title"] = "Register";
}

<br/><br/>
<div class="container jumbotron bg-light" style="width:35%">
    <form asp-action="Register">
        <div class="card-header-pills bg-dark text-white">
            <h2 style="text-align:center">Register</h2>
        </div>
        @if (ViewBag.SuccessMessage != null)
        {
            <p class="text-success">@ViewBag.SuccessMessage</p>
        }
        <div class="form-group" style="80%">
            <label asp-for="Username" class="text-dark"></label>
            <div class="input-group mb-2">
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="80%">
            <label asp-for="UserEmail" class="text-dark"></label>
            <div class="input-group mb-2">
                <input asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="80%">
            <label asp-for="Password" class="text-dark"></label>
            <div class="input-group mb-2">
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="80%">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
        @Html.ActionLink("Return to Login Page", "Login")
    </form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
